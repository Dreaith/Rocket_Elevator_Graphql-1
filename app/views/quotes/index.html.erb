<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<table>
  <thead>
    <tr>
      <th>Building type</th>
      <th>Amount elevators</th>
      <th>Product line</th>
      <th>Installation fees</th>
      <th>Total cost</th>
      <th>Amount floors</th>
      <th>Amount basements</th>
      <th>Amount parking spots</th>
      <th>Maximum occupancy</th>
      <th>Amount apartments</th>
      <th>Amount companies</th>
      <th>Amount corporations</th>
      <th>Business hours</th>
      <th>Email</th>
      <th>Company name</th>
      <th>Full name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.building_type %></td>
        <td><%= quote.amount_elevators %></td>
        <td><%= quote.product_line %></td>
        <td><%= quote.installation_fees %></td>
        <td><%= quote.total_cost %></td>
        <td><%= quote.amount_floors %></td>
        <td><%= quote.amount_basements %></td>
        <td><%= quote.amount_parking_spots %></td>
        <td><%= quote.maximum_occupancy %></td>
        <td><%= quote.amount_apartments %></td>
        <td><%= quote.amount_companies %></td>
        <td><%= quote.amount_corporations %></td>
        <td><%= quote.business_hours %></td>
        <td><%= quote.email %></td>
        <td><%= quote.company_name %></td>
        <td><%= quote.full_name %></td>
        <td><%= quote.phone %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>
